{
  "random_seed": 13270,
  "pytorch_seed": 1327,
  "numpy_seed":1327,
  "dataset_reader": {
    "type": "classification_dataset_reader",
     "token_indexers": {
      "bert": {
          "type": "bert-pretrained",
          "pretrained_model": "scibert_scivocab_uncased/vocab.txt",
          "do_lowercase": false,
          "use_starting_offsets": true
      }
    }
  },
  "train_data_path": "data-classification-jsonl/train.jsonl",
  "validation_data_path": "data-classification-jsonl/validation.jsonl",
  "test_data_path": "data-classification-jsonl/validation.jsonl",
  "evaluate_on_test": true,
  "model": {
    "type": "text_classifier",
    "verbose_metrics": true,
    "text_field_embedder": {
        "allow_unmatched_keys": true,
        "embedder_to_indexer_map": {
            "bert": ["bert", "bert-offsets"]
        },
        "token_embedders": {
            "bert": {
                "type": "bert-pretrained",
                "pretrained_model": "scibert_scivocab_uncased/weights.tar.gz"
            }
        }
    },
      "text_encoder": {
      "type": "lstm",
      "input_size": 768,
      "hidden_size": 200,
      "num_layers": 2,
      "dropout": 0.5,
      "bidirectional": true
    },
    "classifier_feedforward": {
      "input_dim": 400,
      "num_layers": 1,
      "hidden_dims": [200],
      "activations": ["relu"],
      "dropout": [0.5]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["text", "num_tokens"]],
    "batch_size": 32,
    "cache_instances": true
  },
  "trainer": {
    "optimizer": {
        "type": "bert_adam",
        "lr": 0.001
    },
    "validation_metric": "+average_F1",
    "num_serialized_models_to_keep": 3,
    "num_epochs": 70,
    "patience": 10,
    "cuda_device": -1
  }
}
